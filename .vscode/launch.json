    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8080"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "PYTHONUNBUFFERED": "1",
                "ENVIRONMENT_NAME":"LOCAL"
            },
            "jinja": true
        }
    ]
}